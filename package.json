{
  "name": "enapter-blueprints-ide",
  "displayName": "enapter-blueprints-ide",
  "description": "Enapter Blueprints IDE",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "enapter-blueprints",
          "title": "Enapter",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "enapter-blueprints": [
        {
          "id": "enapter-blueprints.views.devices.active",
          "type": "webview",
          "name": "Active Device",
          "visibility": "visible",
          "initialSize": 2
        },
        {
          "id": "enapter-blueprints.views.devices.recent",
          "name": "Previously Used Devices",
          "visibility": "visible"
        }
      ]
    },
    "commands": [
      {
        "command": "enapter-blueprints.commands.Blueprints.SelectDeviceAndUploadBlueprint",
        "title": "Select Device and Upload Blueprint",
        "category": "Enapter",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "enapter-blueprints.commands.Blueprints.UploadToActiveDevice",
        "title": "Upload Blueprint to Active Device",
        "category": "Enapter",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "enapter-blueprints.commands.Devices.RefreshRecent",
        "title": "Refresh Recent Devices",
        "category": "Enapter"
      },
      {
        "command": "enapter-blueprints.commands.Devices.RemoveRecentByTreeNode",
        "title": "Remove",
        "category": "Enapter",
        "icon": "$(trash)"
      },
      {
        "command": "enapter-blueprints.commands.Devices.SelectRecentAsActiveByTreeNode",
        "title": "Select as Active",
        "category": "Enapter",
        "icon": "$(play)"
      },
      {
        "command": "enapter-blueprints.commands.Devices.SelectActive",
        "title": "Select Device",
        "category": "Enapter"
      },
      {
        "command": "enapter-blueprints.commands.Devices.ReloadActive",
        "title": "Reload Active Device",
        "category": "Enapter",
        "icon": "$(refresh)"
      },
      {
        "command": "enapter-blueprints.commands.Devices.ResetActive",
        "title": "Reset Active Device",
        "category": "Enapter",
        "icon": "$(close)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "enapter-blueprints.commands.Devices.RemoveRecentByTreeNode",
          "when": "false"
        },
        {
          "command": "enapter-blueprints.commands.Devices.SelectRecentAsActiveByTreeNode",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "enapter-blueprints.commands.Blueprints.UploadToActiveDevice",
          "when": "view == enapter-blueprints.views.devices.active",
          "group": "navigation@3"
        },
        {
          "command": "enapter-blueprints.commands.Devices.ReloadActive",
          "when": "view == enapter-blueprints.views.devices.active",
          "group": "navigation@2"
        },
        {
          "command": "enapter-blueprints.commands.Devices.ResetActive",
          "when": "view == enapter-blueprints.views.devices.active",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "enapter-blueprints.commands.Devices.RemoveRecentByTreeNode",
          "when": "view == enapter-blueprints.views.devices.recent",
          "group": "inline"
        },
        {
          "command": "enapter-blueprints.commands.Devices.SelectRecentAsActiveByTreeNode",
          "when": "view == enapter-blueprints.views.devices.recent",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Enapter",
      "type": "object",
      "properties": {
        "enapter.apiKey": {
          "type": "string",
          "default": "",
          "description": "Enapter API Key"
        },
        "enapter.apiHost": {
          "type": "string",
          "default": "https://api.enapter.com",
          "description": "Enapter API Host"
        }
      }
    }
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/extensionTests.js",
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "npm run check-types && npm run lint && node esbuild.js",
    "watch-web": "npm-run-all -p watch-web:*",
    "watch-web:esbuild": "node esbuild.js --watch",
    "watch-web:webview:esbuild": "node esbuild.webview.js --watch",
    "watch-web:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package-web": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@types/assert": "^1.5.10",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.10.1",
    "@types/vscode": "^1.95.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-web": "^0.0.63",
    "assert": "^2.1.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "glob": "^11.0.0",
    "mocha": "^10.7.3",
    "npm-run-all": "^4.1.5",
    "prettier": "3.4.2",
    "typescript": "^5.6.3",
    "typescript-plugin-css-modules": "^5.1.0"
  },
  "dependencies": {
    "@microsoft/fast-react-wrapper": "^0.3.25",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "js-yaml": "^4.1.0",
    "jszip": "^3.10.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "reflect-metadata": "^0.2.2",
    "wretch": "^2.11.0"
  },
  "bundleDependencies": [
    "reflect-metadata"
  ]
}
